# Drift wave test
# All variables in normalised units

timestep = 100
nout = 100

[mesh]

nx = 5
ny = 32
nz = 32

Lx = 10
Ly = 100
Lz = 10

dx = Lx / (nx - 4)
dy = Ly / ny
dz = Lz / nz

ne0 = 1 + 0.1*(0.5 - x)

[drift]
nu = 0.1


[vort]
scale = 0.001
function = sin(y-z)

[ne]
scale = 0
function = 0
