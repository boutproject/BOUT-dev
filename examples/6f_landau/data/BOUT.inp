with_vipar = true              # only true when Solving_Eq_Vn = false
Solving_Eq_Vn = false
initial_Nn = false
fac_A = 0.5
NnAmp = 1.0e-3
NnSig = 10
NnLoc = 110
NnLoc_y = 31.5
NnSig_y = 6

Nn_recyc_BC = false
Vn_recyc_BC = false
full_sbc_Vn = true
