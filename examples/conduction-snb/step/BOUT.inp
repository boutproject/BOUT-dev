# Step function temperature profile

MXG = 0

Ne = 5e26  # Electron density, m^-3

# Electron temperature, eV
Tmin = 195   # Minimum temperature, on right of domain
Tmax = 950   # Maximum temperature, on left

mid = 2.5e-4   # Middle of the tanh profile [m]

# Width of the tanh profile [m]
width0 = 8e-5
width1 = 1e-5
width = width0 - 0.5*(1 + tanh((ypos - mid) / width0))*(width0 - width1)

Te = Tmax - 0.5*(1 + tanh((ypos - mid) / width)) * (Tmax - Tmin)

ypos = y * mesh:length / (2*pi) # Y position in meters. y variable from 0 to 2pi

[mesh]
# Size of the domain
nx = 1
ny = 256  # Along magnetic field
nz = 1

length = 6e-4 # in meters
dy = length / ny # Grid spacing

# Set boundaries
ixseps1 = -1
ixseps2 = -1

[snb]
ngroups = 50 # Number of energy groups
beta_max = 20 # Maximum energy group to consider (multiple of eT)
