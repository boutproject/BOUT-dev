  return bout::globals::mesh;
}

void c_mesh_normalise(Mesh * msh, double norm){
  //printf("%g\n",norm);
  auto coord = msh->getCoordinates();
  coord->dx /= norm;
  coord->dy /= norm;
  coord->dz /= norm;
  coord->calculateGeometry();
}
