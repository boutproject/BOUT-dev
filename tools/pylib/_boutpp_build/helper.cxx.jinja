{% set indices = field3d.makelist("size_t $ds, size_t $de, int d$d") %}
void c_get_f3d_part(const Field3D * f3d, double * data, {{ indices }}){
  int j = 0;
  for (size_t x = xs; x != xe; x += dx){
    for (size_t y = ys; y != ye; y += dy){
      for (size_t z = zs; z != ze; z += dz){
	data[j++] = (*f3d)(x,y,z);
      }
    }
  }
}

