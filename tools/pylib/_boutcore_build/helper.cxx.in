  for (int x=xs;x!=xe;x+=dx){
    for (int y=ys;y!=ye;y+=dy){
      (*f2d)(x,y)=data[j++];
    }
  }
}
void c_set_f2d_part_(Field2D * f2d, const double data,int xs,int xe, int dx,int ys,int ye, int dy){
  f2d->allocate();
  for (int x=xs;x!=xe;x+=dx){
    for (int y=ys;y!=ye;y+=dy){
