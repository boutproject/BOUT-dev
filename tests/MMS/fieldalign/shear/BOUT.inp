nout = 100
timestep = 0.1

twistshift = true

MXG = 2  # No X derivatives needed

[mesh]
symmetricGlobalY = true
symmetricGlobalX = true

nx = 1
ny = 32
nz = 32

dx = 1. / (nx-2.*MXG)
dy = 2.*pi / ny
dz = 2.*pi / nz

g11 = 1.0
g22 = G^2 + eta^2
g33 = 1 + HH^2 + I^2
g13 = -I
g12 = -eta
g23 = eta*I - G*HH

vx = G + eta + G*I + HH*eta
vy = 1. + HH
vz = G

zShift = 0.1*x*y
nu = 0.1*x
ShiftAngle = 2.*pi/10.*x
I = 0.1*y
HH = 0.1*x

eta = 0
yShift = 0
G = 1

[solver]

mms = true

[f]

scale = 0.0
function = 0  # Initial condition

solution = cos(-t + 0.1*x*y + x + y + z)^2
source = 8*sin(-t + 0.1*x*y + x + y + z)*cos(-t + 0.1*x*y + x + y + z)
bndry_all = dirichlet_o2(f:solution)
