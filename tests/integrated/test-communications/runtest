test(f[:, 0], [99, 100, 101, 102, 103], 0, region, 'lower y')
test(f[:, -1], [26, 38, 50, 62, 86], 0, region, 'upper y')

region = 'inner, interior'
f = DataFile("data/BOUT.dmp.2.nc")['f'][0, :, :, 0]
