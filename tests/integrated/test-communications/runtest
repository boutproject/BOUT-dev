test(f[:, -1], [74, 2, 14, 34, 46], 0, region, 'upper y')

region = 'outer, exterior'
f = DataFile("data/BOUT.dmp.9.nc")['f'][0, :, :, 0]
test(f[0, 1:-1], [32, 33], 0, region, 'inner x')
test(f[-1, 1:-1], [92, 93], 0, region, 'outer x')
