grid = fci.grid.nc
#grid = simple_test.nc

nout = 50
timestep = 0.2

MZ = 64

[mesh]
paralleltransform = fci

symmetricglobalx = true

[interpolation]
type=lagrange4pt

[fci]
y_periodic = false
z_periodic = false

[f]
scale = 1.0
function = cos(y-z)

bndry_par_yup = parallel_dirichlet(0.0)
bndry_par_ydown = parallel_dirichlet(0.0)
