u2 = 0.401089473
function = 1. + .1*sin(3.2*x-t2)*sin(2*z-u2)

[a2]
w2 = 0.612547
x2 = 0.30908712
function = -1. + .1*sin(1.43*x-w2)*sin(5*z-x2)

[f3]
# set value x boundary conditions
p3 = 0.39503274
q3 = 0.20974396
function = sin(2*pi*3*x-q3)*cos(z-p3) + sin(2*pi*x-p3)*cos(3*z-q3)

[d3]
r3 = 0.512547
